<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enrollment Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div class="container">
        <h1 class="my-4">Enrollment Form</h1>
        
        <form action="/enroll" method="POST">
            <div class="mb-3">
                <label for="course_code" class="form-label">Course</label>
                <select class="form-select" name="course_code" id="course_code" required>
                    {{#courses}}
                    <option value="{{course_code}}">{{course_name}}</option>
                    {{/courses}}
                </select>
            </div>
            
            <div class="mb-3">
                <label for="student_code" class="form-label">Student</label>
                <select class="form-select" name="student_code" id="student_code" required>
                    {{#students}}
                    <option value="{{student_code}}">{{first_name}} {{last_name}}</option>
                    {{/students}}
                </select>
            </div>
            
            <div class="mb-3">
                <label for="enrolment_date" class="form-label">Enrollment Date</label>
                <input type="date" class="form-control" name="enrolment_date" id="enrolment_date" required>
            </div>
            
            <button type="submit" class="btn btn-primary">Enroll Student</button>
        </form>

        <hr />
        <ul class="nav">
            <li class="nav-item">
                <a class="nav-link" href="/courses">List of Courses</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/students">List of Students</a>
            </li>
        </ul>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
