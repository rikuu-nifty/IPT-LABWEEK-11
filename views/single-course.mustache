<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div class="container">
        <h1 class="my-4">{{ course.course_code }}</h1>
        <h2 class="text-danger">{{ course.course_name }}</h2>
        
        <div class="table-responsive my-4">
            <table class="table table-striped table-bordered table-blue">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Student Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#enrollees}}
                    <tr>
                        <td>{{ student_code }}</td>
                        <td>{{ student_name }}</td>
                    </tr>
                    {{/enrollees}}
                </tbody>
            </table>
        </div>

        <hr />
        <ul class="nav">
            <li class="nav-item">
                <a class="nav-link" href="/courses">List of Courses</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/students">List of Students</a>
            </li>
        </ul>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    
</body>
</html>
